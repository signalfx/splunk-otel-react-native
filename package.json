{
  "name": "splunk-otel-react-native-monorepo",
  "private": true,
  "version": "0.1.0",
  "description": "Splunk distribution of Open Telemetry for React Native",
  "scripts": {
    "example": "yarn workspace splunk-otel-react-native-example",
    "start": "yarn workspace splunk-otel-react-native-example start",
    "ios": "yarn workspace splunk-otel-react-native-example ios",
    "android": "yarn workspace splunk-otel-react-native-example android",
    "build:android": "yarn workspace splunk-otel-react-native-example build:android",
    "build:ios": "yarn workspace splunk-otel-react-native-example build:ios",
    "reset": "yarn workspace splunk-otel-react-native-example start --reset-cache",
    "build": "yarn workspace @splunk/otel-react-native build",
    "clean": "del-cli example/android/build example/android/app/build example/ios/build packages/core/lib",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "typecheck": "yarn workspace @splunk/otel-react-native typecheck",
    "test": "yarn workspace @splunk/otel-react-native test",
    "release": "release-it --only-version"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/signalfx/splunk-otel-react-native.git"
  },
  "author": "Splunk Observability MRUM Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/signalfx/splunk-otel-react-native/issues"
  },
  "homepage": "https://github.com/signalfx/splunk-otel-react-native#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/compat": "^1.3.2",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.35.0",
    "@evilmartians/lefthook": "^1.12.3",
    "@react-native/eslint-config": "^0.81.1",
    "@release-it/conventional-changelog": "^10.0.1",
    "commitlint": "^19.8.1",
    "del-cli": "^6.0.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "release-it": "^19.0.4",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2"
  },
  "workspaces": [
    "example",
    "packages/*"
  ],
  "packageManager": "yarn@3.6.1",
  "engines": {
    "node": ">=22"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "angular"
        }
      }
    }
  },
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  }
}
